{
    "env": {
        "es6": true,
        "node": true,
        "mocha":true
    },
    "globals": {
        "document": false,
        "escape": false,
        "navigator": false,
        "unescape": false,
        "window": false,
        "describe": true,
        "expect": true,
        "spy": true,
        "console": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "strict": 0,
        "func-names": 0,
        "comma-dangle": [2, "never"],
        "comma-spacing": [2, { "before": false, "after": true }],
        "comma-style": [2, "last"],
        "no-use-before-define": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "no-unused-expressions": 0,
        "global-require": 0,
        "no-console": ["error", { allow: ["info", "error", "log"] }]
    }
}